{
  "name": "chart-the-stock-market",
  "version": "0.1.0",
  "main": "bin/www.js",
  "repository": "https://bitbucket.org/hey_freecodecamp/chart_the_stock_market/overview",
  "author": "htbkoo",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "clean": "rimraf ./build/ && mkdir build",
    "build-ui": "cd ./views/chart-the-stock-market-ui && npm run build",
    "copy-ui": "cpx ./views/chart-the-stock-market-ui/build/**/* ./build/public",
    "pack-ui": "npm run build-ui && npm run copy-ui",
    "build-server": "babel ./ --out-dir build/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log,chart-the-stock-market-ui,build --copy-files",
    "build-all": "npm run clean && npm run build-server && npm run pack-ui",
    "run": "babel-node ./build/bin/www",
    "rebuild-run": "npm run build-all && npm run run",
    "debug": "set DEBUG=express:* && node %NODE_DEBUG_OPTION% ./build/bin/www",
    "rebuild-debug": "npm run build-all && npm run debug"
  },
  "dependencies": {
    "body-parser": "~1.17.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "ejs": "~2.5.6",
    "express": "~4.15.2",
    "morgan": "~1.8.1",
    "serve-favicon": "~2.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.1",
    "cpx": "^1.5.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.0",
    "rimraf": "^2.6.1"
  }
}
